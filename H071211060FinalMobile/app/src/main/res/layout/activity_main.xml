<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"/>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1A2C50"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/ivMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivTV"
            android:layout_marginEnd="120dp"
            android:src="@drawable/baseline_movie_24" />

        <TextView
            android:id="@+id/tvMovie"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMovie"
            android:layout_alignStart="@+id/ivMovie"
            android:layout_alignEnd="@+id/ivMovie"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-23dp"
            android:text="@string/movies"
            android:textColor="#FFBE00"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/ivTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_tv_24"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp" />


        <TextView
            android:id="@+id/tvTV"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivTV"
            android:layout_alignStart="@+id/ivTV"
            android:layout_alignEnd="@+id/ivTV"
            android:layout_marginStart="-14dp"
            android:layout_marginEnd="-18dp"
            android:text="@string/tv_shows"
            android:textColor="#FFBE00"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_favorite_24"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivTV"
            android:layout_marginStart="100dp" />

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvFavorite"
            android:layout_below="@+id/ivFavorite"
            android:layout_alignStart="@+id/ivFavorite"
            android:layout_alignEnd="@+id/ivFavorite"
            android:layout_marginStart="-14dp"
            android:layout_marginEnd="-18dp"
            android:text="@string/favorites"
            android:textColor="#FFBE00"
            android:textSize="12sp"/>


    </RelativeLayout>
</FrameLayout>